{
  "builds": [{
      "src": "public/**",
      "use": "@now/static"
    },
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "server.js",
      "use": "@now/node",
      "config": {
        "includeFiles": [
          "build/*.*",
          "config/*.*",
          "api/**/*.*",
          "locales/*.*",
          "extensions/**/**/*.*",
          "node_modules/**"
        ]
      }
    }
  ],

  "routes": [{
      "handle": "filesystem"
    },
    {
      "src": "/",
      "dest": "/public"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/build/$1"
    }
  ],
  "public": true,
  "alias": "serverless.xyz.dev"
}
